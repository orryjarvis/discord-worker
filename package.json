{
  "name": "discord-worker",
  "version": "1.0.0",
  "description": "Fun experiment with Cloudflare workers and a discord bot",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "wrangler dev --env dev --port 8787",
    "lint": "eslint . --ext .ts",
    "fix": "eslint --fix . --ext .ts",
    "check": "tsc --noEmit",
    "test": "vitest",
    "e2e": "vitest --config ./test/e2e/vitest.e2e.config.ts",
    "smoke": "vitest --config ./test/e2e/vitest.smoke.config.ts",
    "deploy_commands": "tsx scripts/deploy_commands.ts",
    "generate_test_keys": "tsx scripts/generate_test_keys.ts",
    "publish:test": "wrangler deploy --env test",
    "publish:prod": "wrangler deploy --env prod"
  },
  "dependencies": {
    "@noble/ed25519": "^3.0.0",
    "discord-api-types": "^0.38.31",
    "itty-router": "^5.0.22",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^9.39.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.45.2"
  }
}
