{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Check Types",
        "Lint",
        "Unit Tests",
        "E2E Tests"
      ]
    },
    {
      "label": "Check Types",
      "type": "shell",
      "command": "npm",
      "args": ["run", "check"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Unit Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "E2E Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "e2e"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
