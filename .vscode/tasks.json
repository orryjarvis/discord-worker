{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Check Types",
        "Lint",
        "Unit Tests",
        "E2E Tests"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true,
        "focus": true
      }
    },
    {
      "label": "Check Types",
      "type": "shell",
      "command": "npm",
      "args": ["run", "check"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true,
        "focus": false
      }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": ["$eslint-stylish", "$eslint-compact"],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true,
        "focus": false
      }
    },
    {
      "label": "Unit Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true,
        "focus": false
      }
    },
    {
      "label": "E2E Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "e2e"],
      "group": "build",
      "isBackground": false,
      "options": { "cwd": "${workspaceFolder}" },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": false,
        "showReuseMessage": true,
        "focus": false
      }
    }
  ]
}
